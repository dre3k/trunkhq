%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  .row
    .span2= f.label :name
    .span2= f.text_field :name
  .row
    .span2= f.label :email
    .span2= f.email_field :email
  .row
    .span2= f.label :password
    .span2= f.password_field :password
  .row
    .span2= f.label :password_confirmation
    .span2= f.password_field :password_confirmation
  %div= f.submit "Sign up", :class => 'btn btn-danger'
= render :partial => "devise/shared/links"