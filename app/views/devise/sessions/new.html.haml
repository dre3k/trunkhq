%h2 Sign in

= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  .row
    .span1= f.label :email
    .span1= f.email_field :email
  .row
    .span1= f.label :password
    .span1= f.password_field :password

  - if devise_mapping.rememberable?
    .row
      .span2
        = f.check_box :remember_me
        Remember me

  .row
    .span1= f.submit "Sign in", :class => 'btn btn-success'

= render "devise/shared/links"
