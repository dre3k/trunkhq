.navbar
  .navbar-inner
    .container
      %ul.nav
        - if current_user.has_role? :admin
          %li= link_to(content_tag(:i, '', :class => 'icon-th icon-white') + ' Channel Groups', chan_groups_path)
          %li= link_to(content_tag(:i, '', :class => 'icon-list icon-white') + ' Prefix Groups', prefix_groups_path)

      %ul.nav.pull-right
        %li= link_to(content_tag(:i, '', :class => 'icon-volume-up icon-white') + ' Add channel', new_location_channel_path(current_user.locations.first), :remote => true)
        %li= link_to(content_tag(:i, '', :class => 'icon-map-marker icon-white') + ' Add location', '#new_location', :'data-toggle' => 'modal')
