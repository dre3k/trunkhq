%em= Time.now.to_s(:short)

- if @location.trunks.blank?
  = link_to("Remove #{@location.name}", user_location_path(@location), :method => :delete, :class => 'btn btn-danger')
- else
  .row.head
    .span1 Chanel
    .span2 Phone
    .span1 Operator
    .span1 State
    .span1 Reg status
    .span2 Duration today
    .span2 Live time
    .span3
  - @location.trunks.each do |trunk|
    = render :partial => 'trunks/trunk', :locals => {:trunk => trunk, :location => @location}