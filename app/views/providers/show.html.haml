- model_class = Provider
%header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @provider.email
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @provider.name

%footer
  = link_to t('.back', :default => t("helpers.links.back")), providers_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_provider_path(@provider), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), provider_path(@provider), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
