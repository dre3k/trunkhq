.modal-header
  %button{ :type => "button", :class => "close",  :'data-dismiss' => "modal"} Ã—
  %h3= @channel.location.name

.modal-body
  %h4
    Channel:
    = "##{@channel.id}"
  %h4
    Phone:
    = number_to_phone(@channel.sip.name)
  %dl.dl-horizontal
    %dt Start Date:
    %dd= @channel.start_date_str
    %dt Stop Date:
    %dd= @channel.stop_date_str

    - @channel.sys_info.each do |k,v|

      %dt= k
      %dd
        &nbsp;
        = v
  .row
    .span5= debug(@channel)
  .row
    .span5= debug(@channel.sip)
.modal-footer
  = link_to('Close', '#', :class => 'btn', :'data-dismiss' => 'modal')
