= div_for(channel, :class => 'row') do
  .span1
    &nbsp;
    = channel.id
  .span2
    &nbsp;
    = number_to_phone(channel.sip.name)
  .span1
    &nbsp;
    = channel.operator_groups
  .span1= channel.state
  .span1
    &nbsp;
    = channel.subscribecontext
  .span2 TODO
  .span2
  .span3.btn-group
    = link_to power_location_channel_path(location, channel), :remote => true, :class => "btn power #{channel.status.eql?(1) ? 'btn-success' : 'btn-danger'}" do
      %i.icon-off
      Power
    = link_to edit_location_channel_path(location, channel), :remote => true, :class => 'btn' do
      %i.icon-cog
      Settings
    = link_to sys_info_location_channel_path(location, channel), :remote => true, :class => 'btn' do
      %i.icon-info-sign
      Sys Info
